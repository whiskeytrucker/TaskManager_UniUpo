<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titolo -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titolo"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_below="@id/titleText"
        android:id="@+id/modTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci il titolo" />

    <!-- Descrizione -->
    <TextView
        android:id="@+id/descrText"
        android:layout_below="@id/modTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_below="@id/descrText"
        android:id="@+id/modDescr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci la descrizione" />

    <!-- A chi Ã¨ assegnato -->
    <TextView
        android:id="@+id/assignedText"
        android:layout_below="@id/modDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persona assegnata"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/modAssigned"
        android:layout_below="@+id/assignedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci il nome della persona assegnata" />

    <TextView
        android:id="@+id/expiringText"
        android:layout_below="@id/modAssigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data di scadenza"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <DatePicker
        android:id="@+id/modDate"
        android:layout_width="381dp"
        android:layout_height="208dp"
        android:layout_below="@id/expiringText"
        android:layout_marginTop="0dp"
        android:calendarViewShown="true" />

    <TimePicker
        android:id="@+id/modTime"
        android:layout_width="384dp"
        android:layout_height="96dp"
        android:layout_below="@id/modDate"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/submitModifyButton"
        android:layout_below="@id/modTime"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salva i Dati" />


</RelativeLayout>